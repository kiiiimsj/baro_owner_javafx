<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.baro.Dialog.InternetConnectDialog"
            prefHeight="250.0" prefWidth="300.0"
            style="-fx-background-color: white; -fx-border-color: gray;">
    <VBox AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0" maxHeight="Infinity">
        <HBox fx:id="top_bar" maxWidth="Infinity" spacing="15" alignment="TOP_RIGHT" style="-fx-background-color: #3d3d3d">
            <padding>
                <Insets top="10" bottom="10" right="10"/>
            </padding>
        </HBox>
        <HBox>
            <Label text="인터넷 연결이 끊겼습니다." style="-fx-font-size: 18pt; -fx-text-fill: #8333e6;-fx-font-family: 'Noto Sans CJK KR Regular'"
                   VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity" alignment="CENTER" textAlignment="JUSTIFY">
                <padding>
                    <Insets top="30"/>
                </padding>
            </Label>
        </HBox>
    </VBox>

    <Button fx:id="okay" text="확인" maxWidth="Infinity" alignment="BOTTOM_CENTER" AnchorPane.rightAnchor="5" AnchorPane.leftAnchor="5" AnchorPane.bottomAnchor="5"
            style="-fx-font-family: 'Noto Sans CJK KR Regular';-fx-background-radius: 5px; -fx-background-color: #8333e6; -fx-font-size: 25pt; -fx-text-fill: white"/>
</AnchorPane>
