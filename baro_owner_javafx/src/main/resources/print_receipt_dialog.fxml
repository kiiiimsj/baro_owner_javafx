<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<AnchorPane
        fx:id="dialog_base"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.baro.Dialog.PrintReceiptDialog"
        stylesheets="css/vbox_hover_highlight.css"
        style="-fx-border-color: gray;-fx-border-width: 1;-fx-background-color: #3d3d3d">
    <VBox AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0" maxHeight="Infinity">
        <HBox fx:id="top_bar" maxWidth="Infinity" spacing="15" alignment="TOP_RIGHT" style="-fx-background-color: #282828">
            <padding>
                <Insets top="10" bottom="10" right="10"/>
            </padding>
        </HBox>
        <HBox>
            <Label fx:id="dialog_content" style="-fx-font-size: 12pt; -fx-text-fill: white;-fx-font-family: 'IBM Plex Sans KR'"
                   VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity" alignment="CENTER" textAlignment="CENTER">
                <padding>
                    <Insets top="30" left="10" right="10"/>
                </padding>
            </Label>
        </HBox>
    </VBox>
    <HBox AnchorPane.rightAnchor="5" AnchorPane.leftAnchor="5" AnchorPane.bottomAnchor="5" spacing="10">
        <Button fx:id="no" text="취소" maxWidth="Infinity" alignment="BOTTOM_CENTER" HBox.hgrow="ALWAYS"
                style="-fx-font-family: 'IBM Plex Sans KR';-fx-background-radius: 5px; -fx-background-color: #8333e6; -fx-font-size: 15pt; -fx-text-fill: white"/>
        <Button fx:id="yes" text="확인" maxWidth="Infinity" alignment="BOTTOM_CENTER" HBox.hgrow="ALWAYS"
                style="-fx-font-family: 'IBM Plex Sans KR';-fx-background-radius: 5px; -fx-background-color: #8333e6; -fx-font-size: 15pt; -fx-text-fill: white"/>
    </HBox>
</AnchorPane>
