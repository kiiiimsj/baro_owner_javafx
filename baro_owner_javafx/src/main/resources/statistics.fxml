<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.baro.controllers.StatisticsController"
            stylesheets="css/statistics.css">
    <HBox AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets right="10" top="10" />
        </padding>
        <JFXDatePicker fx:id="start_date_picker" prefHeight="50" stylesheets="css/date_picker.css">
            <HBox.margin>
                <Insets top="15" />
            </HBox.margin>
        </JFXDatePicker>
        <Text fx:id="contour" text="-" textAlignment="CENTER">
            <HBox.margin>
                <Insets left="10" right="10" top="20" />
            </HBox.margin>
        </Text>
        <JFXDatePicker fx:id="end_date_picker" prefHeight="50" stylesheets="css/date_picker.css">
            <HBox.margin>
                <Insets top="15" />
            </HBox.margin>
        </JFXDatePicker>
        <JFXButton fx:id="look_up_button" alignment="CENTER" prefHeight="50" prefWidth="100" text="조회" style="-fx-font-size: 20pt;-fx-text-fill: white; -fx-background-color: #8333e6">
            <HBox.margin>
                <Insets left="10" right="10" top="20" />
            </HBox.margin>
        </JFXButton>
    </HBox>

    <Label fx:id="daily_label" text="일별 판매액" style="-fx-font-size: 40" AnchorPane.leftAnchor="80" AnchorPane.topAnchor="90" />

    <LineChart fx:id="line_chart" prefHeight="500" prefWidth="600" AnchorPane.leftAnchor="5" AnchorPane.topAnchor="130">
        <xAxis>
            <CategoryAxis animated="false" fx:id="x_axis" />
        </xAxis>
        <yAxis>
            <NumberAxis fx:id="y_axis" />
        </yAxis>
    </LineChart>

    <JFXListView fx:id="dailySales" prefWidth="500" prefHeight="330" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="130" />
    <VBox AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="40">
        <HBox>
            <Label fx:id="total_sales_text" style="-fx-font-size: 50; -fx-text-fill: black" text="총 매출 : "/>
            <Label fx:id="total_sales" style="-fx-font-size: 50; -fx-text-fill: black"/>
        </HBox>
        <HBox>
            <Label fx:id="total_number_of_sales_text" style="-fx-font-size: 50; -fx-text-fill: black"  text="총 건수 : " />
            <Label fx:id="total_number_of_sales" style="-fx-font-size: 50; -fx-text-fill: black"/>
        </HBox>
    </VBox>

    <Label fx:id="menu_label" text="메뉴 별 판매액" style="-fx-font-size: 40" AnchorPane.rightAnchor="270" AnchorPane.bottomAnchor="350"/>
    <JFXListView fx:id="totalMenuList" prefWidth="500" prefHeight="320" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10" />
</AnchorPane>
