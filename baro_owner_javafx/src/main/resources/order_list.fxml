<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTabPane?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="900" prefWidth="1400" stylesheets="css/order_list_sheets.css"
           xmlns="http://javafx.com/javafx/8.0.171"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.baro.OrderListController">
    <JFXTabPane fx:id="tabContainer" side="LEFT">
        <Tab fx:id="orderListTab" closable="false">
            <graphic>
                <HBox prefHeight="100.0" prefWidth="200.0"/>
            </graphic>
            <ScrollPane>
                <AnchorPane fx:id="orderListSideContainer" minHeight="0.0" minWidth="0.0" prefWidth="200.0">
                    <children>
                        <JFXToggleButton fx:id="isOpenBtn" prefHeight="15" prefWidth="300"
                                         textAlignment="CENTER"/>
                        <TilePane fx:id="orderListContainer" hgap="10" layoutY="80.0" prefWidth="1150.0"
                                  vgap="10">
                        </TilePane>
                        <ScrollPane hbarPolicy="NEVER" layoutY="80.0" maxHeight="850.0" minWidth="250"
                                    prefHeight="700.0" prefWidth="300">
                            <TilePane fx:id="childContainer" maxHeight="800.0" prefHeight="700.0"
                                      prefWidth="300" style="-fxbackground-color: black"/>
                        </ScrollPane>
                        <HBox layoutY="780" prefHeight="119.0" prefWidth="300"
                              style="-fx-background-color: #8333e6">
                            <children>
                                <Button disable="true" fx:id="pagingButton" alignment="CENTER"
                                        mnemonicParsing="false" prefHeight="120.0" prefWidth="100.0"
                                        text="1 / 3"/>
                                <Button onAction="#tapPrevPage" alignment="CENTER" mnemonicParsing="false"
                                        prefHeight="120.0" prefWidth="100.0" text="&lt;">
                                    <font>
                                        <Font size="30.0"/>
                                    </font>
                                </Button>
                                <Button onAction="#tapNextPage" alignment="CENTER" mnemonicParsing="false"
                                        prefHeight="120.0" prefWidth="100.0" text="&gt;">
                                    <font>
                                        <Font size="30.0"/>
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </ScrollPane>
        </Tab>

        <Tab fx:id="inventoryManagementTab" closable="false">
            <content>
                <AnchorPane fx:id="inventoryManagementContainer" prefHeight="1000.0" prefWidth="1000.0"/>
            </content>
        </Tab>

        <Tab fx:id="infoChangeTab" closable="false">
            <content>
                <AnchorPane fx:id="infoChangeContainer" minHeight="0.0" minWidth="0.0" prefHeight="180.0"
                            prefWidth="200.0"/>
            </content>
        </Tab>

        <Tab fx:id="calculateTab" closable="false">
            <content>
                <AnchorPane fx:id="calculateContainer" minHeight="0.0" minWidth="0.0" prefHeight="180.0"
                            prefWidth="200.0"/>
            </content>
        </Tab>

        <Tab fx:id="statisticsTab" closable="false">
            <content>
                <AnchorPane fx:id="statisticsContainer" minHeight="0.0" minWidth="0.0" prefHeight="180.0"
                            prefWidth="200.0"/>
            </content>
        </Tab>

        <Tab fx:id="settingsTab" closable="false">
            <content>
                <AnchorPane fx:id="settingsContainer" minHeight="0.0" minWidth="0.0" prefHeight="383.0"
                            prefWidth="586.0"/>
            </content>
        </Tab>

    </JFXTabPane>

</StackPane>
