<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTabPane?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="900" prefWidth="1400" stylesheets="css/order_list_sheets.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.baro.OrderListController">
    <children>
        <JFXTabPane fx:id="tabContainer" side="LEFT">
            <tabs>
                <Tab fx:id="orderListTab" closable="false" text="주 문">
                    <content>
                        <ScrollPane>
                            <AnchorPane fx:id="orderListSideContainer" minHeight="0.0" minWidth="0.0" prefHeight="900.0" prefWidth="1250.0">
                                <children>
                           <HBox layoutX="1000.0" layoutY="20.0" spacing="10.0">
                              <children>
                                 <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="영업종료" HBox.hgrow="ALWAYS" />
                                          <JFXToggleButton fx:id="isOpenBtn" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
                                 <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="영업중" HBox.hgrow="ALWAYS" />
                              </children>
                              <padding>
                                 <Insets left="10.0" right="10.0" />
                              </padding>
                           </HBox>
                                    <TilePane fx:id="orderListContainer" hgap="10" layoutY="80.0" prefWidth="1150.0" vgap="10">
                                    </TilePane>
                                    <ScrollPane hbarPolicy="NEVER" layoutY="80.0" maxHeight="850.0" minWidth="250" prefHeight="700.0" prefWidth="300">
                                        <TilePane fx:id="childContainer" maxHeight="800.0" prefHeight="700.0" prefWidth="300" style="-fxbackground-color: black" />
                                    </ScrollPane>
                                    <HBox layoutY="780" prefHeight="119.0" prefWidth="300" style="-fx-background-color: #8333e6">
                              <children>
                                 <Button fx:id="pagingButton" alignment="CENTER" disable="true" mnemonicParsing="false" prefHeight="120.0" prefWidth="100.0" text="1 / 3" />
                                 <Button alignment="CENTER" mnemonicParsing="false" onAction="#tapPrevPage" prefHeight="120.0" prefWidth="100.0" text="&lt;">
                                    <font>
                                       <Font size="30.0" />
                                    </font>
                                 </Button>
                                 <Button alignment="CENTER" mnemonicParsing="false" onAction="#tapNextPage" prefHeight="120.0" prefWidth="100.0" text="&gt;">
                                    <font>
                                       <Font size="30.0" />
                                    </font>
                                 </Button>
                              </children></HBox>
                           <AnchorPane fx:id="orderDetailsContainer" layoutX="300.0" layoutY="80.0" prefHeight="820.0" prefWidth="1020.0" />
                                </children>
                            </AnchorPane>
                        </ScrollPane>
                    </content>
               <graphic>
                  <HBox prefHeight="100.0" prefWidth="200.0" />
               </graphic>
                </Tab>

                <Tab fx:id="inventoryManagementTab" closable="false" text="재고관리">
                    <content>
                        <AnchorPane fx:id="inventoryManagementContainer" prefHeight="1000.0" prefWidth="1000.0" />
                    </content>
                </Tab>

                <Tab fx:id="infoChangeTab" closable="false" text="정보변경">
                    <content>
                        <AnchorPane fx:id="infoChangeContainer" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>

                <Tab fx:id="calculateTab" closable="false" text="정 산">
                    <content>
                        <AnchorPane fx:id="calculateContainer" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>

                <Tab fx:id="statisticsTab" closable="false" text="통 계">
                    <content>
                        <AnchorPane fx:id="statisticsContainer" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>

                <Tab fx:id="settingsTab" closable="false" text="설 정">
                    <content>
                        <AnchorPane fx:id="settingsContainer" minHeight="0.0" minWidth="0.0" prefHeight="383.0" prefWidth="586.0" />
                    </content>
                </Tab>

            </tabs>
        </JFXTabPane>

    </children>

</StackPane>
