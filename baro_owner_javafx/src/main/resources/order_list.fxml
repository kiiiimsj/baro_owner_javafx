<AnchorPane fx:id="orderListSideContainer" stylesheets="css/order_list_sheets.css"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.baro.controllers.OrderListController"
            style="-fx-font-family: 'Noto Sans CJK KR Regular'; -fx-background-color: #3d3d3d;">
            <!--  480  -->
            <HBox fx:id="discount_rate_height" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="10" spacing="10">
                <padding>
                    <Insets left="10.0" right="10.0" />
                </padding>
                <VBox fx:id="discount_rate_set" style="-fx-background-color: #8333e6;-fx-background-radius: 5px" alignment="CENTER" stylesheets="css/label_hover.css">
                    <padding>
                        <Insets left="10" right="10"/>
                    </padding>
                    <HBox spacing="8">
                        <Label text="BARO 할인률 설정" style="-fx-font-size: 15pt; -fx-text-fill: white;-fx-font-weight: bold;" />
                        <Label fx:id="baro_discount_timer" text="15:00" style="-fx-font-size: 15pt; -fx-text-fill: white;-fx-font-weight: bold;"/>
                    </HBox>
                    <HBox  style="-fx-background-color: white;-fx-background-radius: 5px" alignment="CENTER">
                        <Label text="현재 할인률 : " style="-fx-font-size: 13pt; -fx-text-fill: #8333e6;-fx-font-weight: bold;" alignment="CENTER"/>
                        <Label fx:id="store_discount_rate" style="-fx-font-size: 13pt; -fx-text-fill: #8333e6;-fx-font-weight: bold;"/>
                        <Label fx:id="arrow_right" visible="false" text=">" style="-fx-font-size: 13pt; -fx-text-fill: #8333e6;-fx-font-weight: bold;"/>
                        <Label fx:id="new_store_discount_rate" visible="false" style="-fx-font-size: 13pt; -fx-text-fill: #8333e6;-fx-font-weight: bold;"/>
                    </HBox>
                </VBox>
                <HBox alignment="CENTER_RIGHT">
                    <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                           text="영업종료" HBox.hgrow="ALWAYS" style="-fx-font-size: 15pt; -fx-text-fill: white;-fx-font-weight: bold"/>
                    <JFXToggleButton fx:id="isOpenBtn" maxHeight="1.7976931348623157E308"
                                     maxWidth="1.7976931348623157E308" textAlignment="CENTER"
                                     HBox.hgrow="ALWAYS"/>
                    <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                           text="영업중" HBox.hgrow="ALWAYS" style="-fx-font-size: 15pt;-fx-text-fill: white; -fx-font-weight: bold"/>
                </HBox>
            </HBox>
            <HBox AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0" pickOnBounds="false">
                <VBox>
                    <!-- 안쓰는것 같아서 주석처리 -->
                    <!--<TilePane fx:id="orderListContainer" hgap="10" layoutY="80.0" prefWidth="1150.0" vgap="10">-->
                    <!--</TilePane>-->
                    <!--layoutY="80.0" 제거 -->
                    <!-- prefHeight 737 에서 변경 -->
                    <TilePane fx:id="childContainer" style="-fx-background-color: #3d3d3d"/>
                    <!--layoutY 780 -> 700 변경 -->
                    <HBox fx:id="paging_ui" prefHeight="100" spacing="5" >
                        <Label fx:id="pagingLabel" alignment="CENTER"
                               style="-fx-font-size: 13pt; -fx-text-fill: white; -fx-background-color: #3d3d3d;-fx-font-family: 'Noto Sans Korean Regular'"/>
                        <Button fx:id="prev_tab" alignment="CENTER" mnemonicParsing="false" onAction="#tapPrevPage" text="&lt;"
                                style="-fx-background-color: #3d3d3d;-fx-background-radius: 5px; -fx-border-radius: 5px;-fx-border-color: white; -fx-text-fill: white">
                            <font>
                                <Font size="30.0"/>
                            </font>
                        </Button>
                        <Button fx:id="next_tab" alignment="CENTER" mnemonicParsing="false" onAction="#tapNextPage" text="&gt;"
                                style="-fx-background-color: #3d3d3d;-fx-background-radius: 5px; -fx-border-radius: 5px;-fx-border-color: white; -fx-text-fill: white">
                            <font>
                                <Font size="30.0"/>
                            </font>
                        </Button>
                    </HBox>
                </VBox>
                <AnchorPane fx:id="orderDetailsContainer" pickOnBounds="false"/>
            </HBox>
</AnchorPane>
