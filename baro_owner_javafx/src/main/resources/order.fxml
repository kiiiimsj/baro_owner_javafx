<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<HBox fx:id="shell" spacing="5.0"
      xmlns="http://javafx.com/javafx/8.0.291" xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="css/vbox_hover_highlight.css"
      fx:controller="com.baro.controllers.OrderController"
      style="-fx-background-insets: 5; -fx-border-color: rgba(255, 255, 255, 0.5); -fx-border-radius: 5;
        -fx-background-color: #3d3d3d; -fx-font-family: 'IBM Plex Sans KR'">
   <VBox fx:id="order" HBox.hgrow="ALWAYS">
      <padding>
         <Insets bottom="5.0" left="5.0" top="5.0"/>
      </padding>
      <Label fx:id="customer" style="-fx-font-size: 10pt; -fx-text-fill: white"/>
      <HBox prefHeight="0.0" spacing="10.0">
         <Label fx:id="order_count" text="메뉴 1개" style="-fx-font-size: 11pt; -fx-text-fill: white"/>
         <Label fx:id="price" text="1000원" style="-fx-font-size: 11pt; -fx-text-fill: white"/>
      </HBox>
      <AnchorPane HBox.hgrow="ALWAYS">
         <Label fx:id="state" textAlignment="CENTER" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
            <padding>
               <Insets left="5" right="5" top="5" bottom="5"/>
            </padding>
         </Label>
         <Label fx:id="timeLabel" HBox.hgrow="ALWAYS" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"
                style="-fx-text-fill: white; -fx-font-size: 10pt">
            <padding>
               <Insets top="5" right="5"/>
            </padding>
         </Label>
      </AnchorPane>
   </VBox>

   <!--      <StackPane fx:id="timeTable">-->
