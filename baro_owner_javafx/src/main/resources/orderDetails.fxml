<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="base" prefHeight="800.0" prefWidth="930.0" stylesheets="css/order_detail.css" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.baro.controllers.orderDetail.OrderDetailsController">
    <!-- 영업중, 영업종료 토글 버튼 클릭이 막혀서 따로 크기 설정-->
   <HBox fx:id="top_area" maxHeight="400" maxWidth="400" prefHeight="100.0" prefWidth="400.0" >
      <children>
          <!-- 오른쪽에서 왼쪽으로 이동, 토글 버튼 가림 -->
<!--         <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />-->
<!--          <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="200.0" spacing="30.0" HBox.hgrow="ALWAYS">-->
          <HBox maxHeight="400" maxWidth="400" prefHeight="100.0" prefWidth="400.0" spacing="30.0" HBox.hgrow="ALWAYS"
                pickOnBounds="false">
<!--              <HBox.margin>-->
<!--                  <Insets/>-->
<!--              </HBox.margin>-->
              <padding>
                  <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
              </padding>
              <Button fx:id="cancelBtn" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                      mnemonicParsing="false" onAction="#clickCancel" text="결제취소" HBox.hgrow="ALWAYS"
                      style="-fx-text-fill: white; -fx-background-color: #8333e6"/>
              <Button fx:id="completeBtn" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                      mnemonicParsing="false" onAction="#clickDone" text="완료처리" HBox.hgrow="ALWAYS"
                      style="-fx-text-fill: white; -fx-background-color: #8333e6"/>
          </HBox>
      </children>
   </HBox>
      <SplitPane fx:id="splitPane" dividerPositions="0.5" prefHeight="600.0" prefWidth="1200.0" >
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="700.0" prefWidth="600.0">
               <children>
                  <VBox prefHeight="700.0" prefWidth="400.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="30.0">
                     <children>
                        <HBox prefHeight="28.0" prefWidth="295.0">
                           <children>
                              <Label styleClass="label-left" text="고객번호 :" />
                              <Label fx:id="phoneLabel" styleClass="label-left" text="010" />
                           </children>
                        </HBox>
                        <HBox prefHeight="28.0" prefWidth="295.0">
                           <children>
                              <Label styleClass="label-left" text="주문시간 :" />
                              <Label fx:id="dateLabel" styleClass="label-left" text="010" />
                           </children>
                        </HBox>
                        <HBox prefHeight="28.0" prefWidth="295.0">
                           <children>
                              <Label styleClass="label-left" text="합계 :" />
                              <Label fx:id="totalPriceLabel" styleClass="label-left" text="010" />
                           </children>
                        <VBox.margin>
                           <Insets top="30.0" />
                        </VBox.margin>
                        </HBox>
                        <HBox prefHeight="28.0" prefWidth="295.0">
                           <children>
                              <Label styleClass="label-left" text="쿠폰 :" />
                              <Label fx:id="discountPriceLabel" styleClass="label-left" text="010" />
                           </children>
                        </HBox>
                        <HBox prefHeight="2.0" prefWidth="295.0" style="-fx-background-color: black;">
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </VBox.margin>
                        </HBox>

                         <HBox prefHeight="28.0" prefWidth="295.0">
                             <children>
                                 <Label fx:id="finalPriceLabel" styleClass="label-left" text="결제 금액 :" />
                             </children>
                         </HBox>

                         <HBox prefHeight="28.0" prefWidth="295.0">
                             <children>
                                 <Label styleClass="label-left" text="요청 사항 :" />
                                 <Label fx:id="requestLabel" styleClass="label-left" text="010" />
                             </children>
                        <VBox.margin>
                           <Insets top="30.0" />
                        </VBox.margin>
                         </HBox>
                     </children>
                  </VBox>
               </children>
          </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="700.0" prefWidth="600.0">
               <children>
                  <Button mnemonicParsing="false" text="Button" />
                  <ScrollPane fx:id="receipt_preview_scroll" prefHeight="700.0" prefWidth="600.0" />
               </children></AnchorPane>
        </items>
      </SplitPane>
       <HBox fx:id="button_area" prefHeight="100" prefWidth="1200" spacing="30.0">
           <Button fx:id="printButton" mnemonicParsing="false" prefHeight="100" prefWidth="400" style="-fx-font-family: 'NotoSansRegular';-fx-background-radius: 5px; -fx-background-color: #8333e6; -fx-font-size: 25pt; -fx-text-fill: white" text="영수증 인쇄">
               <HBox.margin>
                   <Insets bottom="10" left="10" right="10" top="10" />
               </HBox.margin>
           </Button>
           <Button fx:id="setTime" mnemonicParsing="false" onAction="#clickSettingTimes" prefHeight="100" prefWidth="400" style="-fx-font-family: 'NotoSansRegular';-fx-background-radius: 5px; -fx-background-color: #8333e6; -fx-font-size: 30pt; -fx-text-fill: white" text="시간 설정">
               <HBox.margin>
                   <Insets bottom="10" left="10" right="10" top="10" />
               </HBox.margin>
           </Button>
      <VBox.margin>
         <Insets left="30.0" right="30.0" />
      </VBox.margin>
       </HBox>
</VBox>
